{
  "name": "cloud-run-jobs-emulator",
  "version": "0.0.0",
  "engines": {
    "node": ">=21",
    "npm": ">=10"
  },
  "scripts": {
    "dev": "npx concurrently \"npm run dev:build\" \"npm run dev:run\"",
    "dev:build": "npx swc ./src -d ./dist --watch --log-watch-compilation",
    "dev:run": "npx chokidar \"dist/**/*.js\" --initial --command \"pkill -xf 'node dist/main.js --config /cloud-run-jobs-config.yaml'; node dist/main.js --config /cloud-run-jobs-config.yaml\"",
    "build": "npx swc ./src -d ./dist",
    "test": "npx jest"
  },
  "dependencies": {
    "@google-cloud/run": "^1.0.2",
    "@grpc/grpc-js": "^1.9.9",
    "@grpc/proto-loader": "^0.7.10",
    "dockerode": "^4.0.0",
    "google-proto-files": "^4.0.0",
    "pino": "^8.16.1",
    "yaml": "^2.3.3",
    "yargs-parser": "^21.1.1"
  },
  "devDependencies": {
    "@swc/cli": "^0.1.62",
    "@swc/core": "^1.3.95",
    "@swc/jest": "^0.2.29",
    "@types/dockerode": "^3.3.21",
    "@types/jest": "^29.5.7",
    "chokidar-cli": "^3.0.0",
    "concurrently": "^8.2.2",
    "jest": "^29.7.0",
    "pino-pretty": "^10.2.3",
    "swc": "^1.0.11",
    "typescript": "^5.2.2"
  }
}
